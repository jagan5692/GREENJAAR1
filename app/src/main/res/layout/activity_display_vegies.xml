<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >


        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:id="@+id/LinearLayout02"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/brinjal"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="0dp"
                app:srcCompat="@drawable/brinjal" />
                <LinearLayout
                    android:id="@+id/LinearLayout03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="0dp"
                   android:text="Price of brinjal"/>

                    <EditText
                        android:id="@+id/brinjalQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Quantity"
                        android:inputType="number" />

                    <Button
                        android:id="@+id/brinjalAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="addTocart"
                        android:text="Add to cart" />

                    <Button
                        android:id="@+id/buyBrinjal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="goToCart"
                        android:text="Buy now" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/LinearLayout11"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/capsicum"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="0dp"
                    app:srcCompat="@drawable/capsicum" />
                <LinearLayout
                    android:id="@+id/LinearLayout04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:text="Price of capsicum"/>

                    <EditText
                        android:id="@+id/capsicumQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Quantity"
                        android:inputType="number" />

                    <Button
                        android:id="@+id/capsicumAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="addTocart"
                        android:text="Add to cart" />

                    <Button
                        android:id="@+id/buyCapsicum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="goToCart"
                        android:text="Buy now" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout05"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/carrots"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="0dp"
                    app:srcCompat="@drawable/carrots" />
                <LinearLayout
                    android:id="@+id/LinearLayout06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:text="Price of carrots"/>

                    <EditText
                        android:id="@+id/carrotQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Quantity"
                        android:inputType="number" />

                    <Button
                        android:id="@+id/carrotAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="addTocart"
                        android:text="Add to cart" />

                    <Button
                        android:id="@+id/buyCarrot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="goToCart"
                        android:text="Buy now" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout07"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/potato"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="0dp"
                    app:srcCompat="@drawable/potato" />
                <LinearLayout
                    android:id="@+id/LinearLayout08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:text="Price of potato"/>

                    <EditText
                        android:id="@+id/potatoQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Quantity"
                        android:inputType="number" />

                    <Button
                        android:id="@+id/potatoAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="addTocart"
                        android:text="Add to cart" />

                    <Button
                        android:id="@+id/buyPotato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="goToCart"
                        android:text="Buy now" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout09"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/tomatoes"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="0dp"
                    app:srcCompat="@drawable/tomatoes" />
                <LinearLayout
                    android:id="@+id/LinearLayout10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:text="Price of tomatoes"/>

                    <EditText
                        android:id="@+id/tomatoQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Quantity"
                        android:inputType="number" />

                    <Button
                        android:id="@+id/tomatoAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="addTocart"
                        android:text="Add to cart" />

                    <Button
                        android:id="@+id/buyTomato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="goToCart"
                        android:text="Buy now" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>



</ScrollView>